<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ToolBar_TitleTextStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_21</item>
        <item name="fontFamily">@font/officina_sans_extra_bold_scc</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavView_TextStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_11</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyle6">
        <item name="fontFamily">@font/officina_sans_extra_bold_scc</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">21sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/blue_grey</item>
    </style>

    <style name="NotCapsButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyleTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>


    <style name="TextStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextStyle_SplashScreen">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/splashScreen_colorText</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearanceStyle</item>
    </style>

    <style name="TabTextAppearanceStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColorHint">@color/colorTitleText</item>
    </style>


</resources>
