<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".news.NewsFragment"
    android:orientation="vertical"
    android:background="@color/light_grey_two">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/news_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary"
        app:menu="@menu/fragment_news_toolbar"
        app:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <TextView
            android:id="@+id/news_tv_toolbar_title"
            style="@style/ToolBar_TitleTextStyle"
            android:text="@string/news_toolbar_title" />
    </androidx.appcompat.widget.Toolbar>

    <ProgressBar
        android:id="@+id/news_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/news_rv"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/rv_news_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>