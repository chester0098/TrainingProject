<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_news_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/rv_news_margin"
    android:layout_marginTop="@dimen/rv_news_margin"
    app:cardCornerRadius="@dimen/rv_news_card_cornerRadius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/rv_news_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rv_news_image_height"
            android:layout_marginStart="@dimen/rv_news_image_margin"
            android:layout_marginTop="@dimen/rv_news_image_margin"
            android:layout_marginEnd="@dimen/rv_news_image_margin"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_man" />

        <ImageView
            android:id="@+id/imageViewFade"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rv_news_image_height"
            android:layout_marginStart="@dimen/rv_news_image_margin"
            android:layout_marginTop="@dimen/rv_news_image_margin"
            android:layout_marginEnd="@dimen/rv_news_image_margin"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fade" />

        <TextView
            android:id="@+id/rv_news_title"
            style="@style/TextStyle6"
            android:layout_width="0dp"
            android:lineSpacingExtra="5sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/rv_news_title_marginHorizontal"
            android:layout_marginTop="@dimen/rv_news_title_marginTop"
            android:layout_marginEnd="@dimen/rv_news_title_marginHorizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rv_news_image"
            tools:text="Спонсоры отремонтируют школу-интернат" />

        <ImageView
            android:id="@+id/imageViewDecore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rv_news_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_news_title"
            app:srcCompat="@drawable/ic_decor" />

        <TextView
            android:id="@+id/rv_news_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/rv_news_description_marginHorizontal"
            android:layout_marginTop="@dimen/rv_news_description_marginTop"
            android:layout_marginEnd="@dimen/rv_news_description_marginHorizontal"
            android:gravity="center"
            android:lineSpacingExtra="2sp"
            android:textColor="@color/colorText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewDecore"
            app:lineHeight="20sp"
            tools:text="Дубовская школа-интернат для детей с ограниченными возможностями здоровья стала первой в области …" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rv_news_linearDate_marginTop"
            android:background="@color/turtle_green"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_news_description">


            <ImageView
                android:id="@+id/imageViewCalendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/imageViewCalendar_paddingVertical"
                app:srcCompat="@drawable/ic_calendar" />

            <TextView
                android:id="@+id/rv_news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/rv_news_date_marginStart"
                android:gravity="center"
                tools:text="Осталось 13 дней (21.09 – 20.10)"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>